FROM golang:latest as builder
MAINTAINER OpsTree Solutions
COPY ./ /go/src/ot-microservices/
WORKDIR /go/src/ot-microservices/attendance
RUN go get -v -t -d ./... \
    && go build -o attendance

FROM alpine:latest
MAINTAINER OpsTree Solutions
WORKDIR /app
RUN apk add --no-cache libc6-compat
COPY --from=builder /go/src/ot-microservices/attendance/attendance /app/
COPY attendance/config.yaml /app/config.yaml
ENV CONFIG_FILE "/app/config.yaml"
ENTRYPOINT ["./attendance"]
